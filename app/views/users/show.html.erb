<section class="user">
  <%= profile_image(@user) %>
  <h1><%= @user.name %></h1>
  <h2><%= @user.username %></h2>
  <h2><%= mail_to(@user.email) %></h2>
  <h3>Member Since</h3>
  <p>
    <%= @user.created_at.strftime("%B %Y") %>
  </p>
  <% if current_user?(@user)%>
    <div class="actions">
      <%= link_to "Edit Account", edit_user_path(@user),
                  class: "button edit" %>
      <%= link_to 'Delete Account', @user, class: "button delete",
              data: { turbo_method: :delete, turbo_confirm: "Permanently delete your account!?" } %>
    </div>
  <% end %>
  <% if @reviews.present? %>
    <h3>Reviews</h3>
    <% @reviews.each do |review| %>
      <div class="review">
        <div class="details">
          <span class="title">
            <%= link_to render_movie_image(review.movie)  %>
            <%= link_to review.movie.title, review.movie %>
          </span>
          <span class="stars">
            <%= render "shared/stars", percent: review.movie.average_stars_as_percent %>
          </span>
          <span class="date">
            <%= time_ago_in_words(review.created_at) %> ago
          </span>
          <p>
            <%= review.comment %>
          </p>
        </div>
      </div>
    <% end %>
  <% end %>
  <% if @favorite_movies.present? %>
    <h3>Favorite Movies</h3>
    <div class="favorite-movies">
      <% @favorite_movies.each do |movie| %>
        <%= link_to image_tag(movie.image_file_name), movie %>
      <% end %>
    </div>
  <% end %>
</section>
